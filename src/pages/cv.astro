---
import BaseLayout from "../layouts/BaseLayout.astro";
import TimeLineElement from "../components/cv/TimeLine.astro";
---

<BaseLayout title="Resume" sideBarActiveItemID="cv">
  <div class="mb-5">
    <div class="text-3xl w-full font-bold">Short Resume</div>
  </div>

  <div class="mb-5">
    <div class="text-2xl w-full font-bold">Education</div>
  </div>

  <div class="time-line-container grid gap-4 mb-10">
    <TimeLineElement
      title="PhD Student in Probability"
      coauthors="Under the supervision of Emmanuel Schertzer, Jean-Jil Duchamps and Amaury Lambert"
      subtitle="From November 2023, Collège de France, ENS Paris and University of Vienna"
    >
    </TimeLineElement>
    <TimeLineElement
      title="M2 Mathématiques de l'aléatoire, Probabilité et Statistiques"
      subtitle="2022-2023, IMO, Orsay, France"
    >
    <a class="link-accent" href="https://www.imo.universite-paris-saclay.fr/en/students/masters-programs/mathematics-and-applications/m2/probabilites-et-statistiques/" target="_blank">Master</a> in probability theory
    </TimeLineElement>
    <TimeLineElement
    title="École Polytechnique, X2019"
    subtitle="2019-2023, Palaiseau, France"
  >
  <a class="link-accent"href="https://programmes.polytechnique.edu/cycle-ingenieur-polytechnicien/cycle-ingenieur-polytechnicien" target="_blank">Engineering curriculum</a> with a specialization in applied mathematics and probability theory
  </TimeLineElement>
  </div>

  <div class="mb-5">
    <div class="text-2xl w-full font-bold">Experience</div>
  </div>

  <div class="time-line-container mb-10">
    <TimeLineElement
    title="Teaching assistant in maths-bio"
    coauthors="BSc/MSc students"
    subtitle="2023-2024, IBENS, ENS Paris, France"
  >
  </TimeLineElement>
    <TimeLineElement
    title="Research Internship (M2)"
    coauthors="Under the supervision of Emmanuel Schertzer and Amaury Lambert"
    subtitle="April - August 2023, Collège de France and ENS Paris, France"
  >
  </TimeLineElement>
  <TimeLineElement
  title="Research Internship (M1)"
  coauthors="Under the supervision of Emmanuel Schertzer"
  subtitle="April - July 2022, University of Vienna, Austria"
  >
  </TimeLineElement>

  <TimeLineElement
  title="Engineering Internship"
  coauthors="Data scientist at Gens de Confiance"
  subtitle="June - August 2021, Nantes, France"
  >
  </TimeLineElement>

  <TimeLineElement
  title="Teaching Internship"
  coauthors="Teaching assistant in mathematics at Lycée Français de Barcelone and UPC Catalunya"
  subtitle="October 2019 - April 2020, Barcelona, Spain"
  >
  </TimeLineElement>
  </div>

  
</BaseLayout>
